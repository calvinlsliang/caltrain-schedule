<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/actionbarPadding"
    android:paddingRight="@dimen/actionbarPadding">

    <Spinner
        android:id="@+id/actionbar_spinner"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/actionbarSpinnerPaddingRight"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/actionbar_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/feedback"
        android:layout_toLeftOf="@+id/actionbar_swap"
        android:layout_alignWithParentIfMissing="true"/>

    <ImageView
        android:id="@+id/actionbar_swap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/actionbarSwapPaddingLeft"
        android:paddingRight="@dimen/actionbarSwapPaddingRight"
        android:src="@drawable/swap"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
